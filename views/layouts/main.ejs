<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= locals.title %></title>
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <!--     Fonts and icons     -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700"
      rel="stylesheet"
    />
    <!-- Font Awesome Icons -->
    <script
      src="https://kit.fontawesome.com/42d5adcbca.js"
      crossorigin="anonymous"
    ></script>

    <link href="assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="assets/css/nucleo-svg.css" rel="stylesheet" />

    <link
      href="assets/css/argon-dashboard-tailwind.css?v=1.0.1"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="m-0 font-sans text-base antialiased font-normal dark:bg-slate-900 leading-default bg-gray-50 text-slate-500"
  >
    <div class="absolute w-full bg-blue-500 dark:hidden min-h-75"></div>
    <%- include('../partials/sidebar.ejs') %>

    <main
      class="relative h-full max-h-screen transition-all duration-200 ease-in-out xl:ml-68 rounded-xl"
    >
      <%- include('../partials/navbar.ejs') %>

      <div class="w-full px-6 py-6 mx-auto">
        
        <%- body %>
        
        <%- include('../partials/footer.ejs') %>
      </div>
    </main>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Add the class to the appropriate anchor element
        var currentPage = window.location.pathname;
        var anchorElement = document.querySelector(
          'a[href="' + currentPage + '"]'
        );
        if (anchorElement) {
          anchorElement.classList.add("bg-blue-500/13");
        }
      });
  function openConfirmationModal() {
    document.getElementById('confirmationModal').classList.remove('hidden');
    document.getElementById('confirmationModal').classList.add('fixed');
  }

  function closeConfirmationModal() {
    document.getElementById('confirmationModal').classList.add('hidden');
    document.getElementById('confirmationModal').classList.remove('fixed');
  }
</script>

  </body>

  <!-- plugin for charts  -->
